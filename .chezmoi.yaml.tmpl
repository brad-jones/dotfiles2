edit:
  command: code -w

git:
  autoPush: true

interpreters:
  ts:
    command: deno
    args:
      - run
      - -qA

{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

data:
  osid: {{ $osid | quote }}